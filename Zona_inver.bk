ns1	IN	A	192.168.100.6
6	IN	PTR	mail.noshutdown.com.
6	IN	PTR	ftp.noshutdown.com.
6	IN	PTR	smtp.noshutdown.com.
6	IN	PTR	www.noshutdown.com.
